extends ../layout/base 
block content 
	section.content-header 
		h1 
			| Edit Data Burger
			small menu for editing data burger
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Data Burger
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
					
			.box-body
				form(role='form',method='post' action='/databurgers/add')
					.row
						
						.col-xs-6
							.box-body
								- if (messages.msg_error) 
									.alert.alert-danger.alert-dismissable 
										button.close(type='button', data-dismiss='alert', aria-hidden='true') 
											| Ã—
										h4
											i.icon.fa.fa-ban
											| Alert! 
										| !{messages.msg_error}
								.form-group
									label
										| Name
									input(type='text',value='#{name}',name='name',placeholder='Enter Name', autofocus).form-control
								.form-group
									label
										| Stock
									input(type='text',value='#{stock}',name='stock',placeholder='Enter stock').form-control
								.form-group
									label
										| Harga
									input(type='text',value='#{harga}',name='harga',placeholder='Enter harga').form-control
							.box-footer
								button(type='submit').btn.btn-primary
									| Submit
								a(href='/databurgers').btn.btn-primary.pull-right
									| Back